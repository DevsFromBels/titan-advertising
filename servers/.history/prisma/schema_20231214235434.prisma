// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  Admin
  Standart
  EnterpriseUser
  User
}

model Avatars {
  id      String @id
  public  String
  url     String
  user    User @relation(fields: [userId], references: [id])
  userId  String @unique
}

model User {
  id        String @id
  name      String
  email     String @unique
  phone_number Float @unique
  address String  
  password  String
  avatar    Avatars?
  role      Role @default(User)
  createdAt DateTime
}
